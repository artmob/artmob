//* Implementation of hook_access().
function artmob_citation_access($op, $node) {
  global $user;

  if ($op == 'create') {
    return user_access('Add Citation');
  }

  else if ($op == 'update') {
    return user_access('Edit Citation');
  }
  else if ($op == 'delete') {
    return user_access('Delete Citation');
  }
  else if ($op == 'view') {
    return user_access('View Citation');
  }
  else {
    return FALSE;
  }
}

